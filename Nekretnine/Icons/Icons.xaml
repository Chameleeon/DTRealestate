<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Theme-aware Brushes -->
    <SolidColorBrush x:Key="IconBrush" Color="#212121"/>
    <SolidColorBrush x:Key="IconBrushDarkMode" Color="#FFFFFF"/>

    <!-- Sample SVG Path Icon (Home) -->
    <Geometry x:Key="HomeIcon">M10,20 L10,10 L14,10 L14,20 L19,20 L19,10 L22,10 L12,3 L2,10 L5,10 L5,20 L10,20 Z</Geometry>

    <!-- Home Icon as a DrawingImage -->
    <DrawingImage x:Key="HomeIconImage">
        <DrawingImage.Drawing>
            <GeometryDrawing Brush="{DynamicResource IconBrush}" Geometry="{StaticResource HomeIcon}"/>
        </DrawingImage.Drawing>
    </DrawingImage>
</ResourceDictionary>
