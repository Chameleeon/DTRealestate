<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background Colors -->
    <Color x:Key="Background">#ffffff</Color>
    <Color x:Key="SidebarBackground">#71B9E1</Color>
    <Color x:Key="BackgroundLogin">#ffffff</Color>
    <Color x:Key="SidebarBackgroundLogin">#71B9E1</Color>
    <Color x:Key="CardBacground">#f5f5f5</Color>
    <Color x:Key="SecondaryCardBackground">#d0d0d0</Color>
    <Color x:Key="SecondaryCardHeaderBackground">#c0c0c0</Color>
    <Color x:Key="SecondaryGridBackground">#e0e0e0</Color>
   

    <!-- Text Colors -->
    <Color x:Key="TextColorPrimary">#1a1a1a</Color>
    <Color x:Key="TextColorSecondary">#4f4f4f</Color>
    <Color x:Key="ButtonTextSecondaryColor">#1a1a1a</Color>

    <!-- Icon Colors -->
    <Color x:Key="IconPrimary">#333333</Color>

    <!-- Button Colors -->
    <Color x:Key="ButtonHover">#dddddd</Color>
    <Color x:Key="ButtonText">#ffffff</Color>
    <Color x:Key="ButtonPressed">#666666</Color>
    <Color x:Key="LoginButtonBg">#71B9E1</Color>
    <Color x:Key="LoginButtonHover">#71B9E1</Color>
    <Color x:Key="HoverSecondary">#51a9c8</Color>
    <Color x:Key="SelectedColor">#71B9E1</Color>
    <Color x:Key="DarkerButtonDisabled">#b3b3b3</Color>
    <Color x:Key="ButtonSelected">#71B9E1</Color>

    <!-- Input Box Colors -->
    <Color x:Key="InputBackground">#f5f5f5</Color>

    <!-- Shadow Effect Colors -->
    <Color x:Key="DropShadowSecondary">#e0e0e0</Color>

    <!-- Highlights Colors -->
    <Color x:Key="HighlightPrimary">#9b9b9b</Color>
    <Color x:Key="HighlightTextPrimary">#333333</Color>

    <!-- Accent Color -->
    <Color x:Key="AccentColor">#71B9E1</Color>
    <!-- Accent Color -->

    <!-- Background Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackground}"/>
    <SolidColorBrush x:Key="BackgroundBrushLogin" Color="{StaticResource BackgroundLogin}"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrushLogin" Color="{StaticResource SidebarBackgroundLogin}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBacground}"/>
    <SolidColorBrush x:Key="SecondaryCardBackgroundBrush" Color="{StaticResource SecondaryCardBackground}"/>
    <SolidColorBrush x:Key="SecondaryCardHeaderBackgroundBrush" Color="{StaticResource SecondaryCardHeaderBackground}"/>

    <!-- Icon Brushes -->
    <SolidColorBrush x:Key="IconBrush" Color="{StaticResource IconPrimary}"/>

    <!-- Button Brushes -->
    <SolidColorBrush x:Key="ButtonTextBrush" Color="{StaticResource ButtonText}"/>
    <SolidColorBrush x:Key="ButtonSecondaryTextBrush" Color="{StaticResource ButtonTextSecondaryColor}"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="{StaticResource ButtonHover}"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="{StaticResource ButtonPressed}"/>
    <SolidColorBrush x:Key="LoginButtonBgBrush" Color="{StaticResource LoginButtonBg}"/>
    <SolidColorBrush x:Key="LoginButtonHoverBrush" Color="{StaticResource LoginButtonHover}"/>
    <SolidColorBrush x:Key="HoverSecondaryBrush" Color="{StaticResource HoverSecondary}"/>
    <SolidColorBrush x:Key="SelectedColorBrush" Color="{StaticResource SelectedColor}"/>
    <SolidColorBrush x:Key="DarkerButtonDisabledBrush" Color="{StaticResource DarkerButtonDisabled}"/>
    <SolidColorBrush x:Key="ButtonSelectedBrush" Color="{StaticResource ButtonSelected}"/>

    <!-- Input Box -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource InputBackground}"/>

    <!-- Text Brushes -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextColorPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextColorSecondary}"/>

    <!-- Shadow Effect Brushes -->
    <SolidColorBrush x:Key="DropShadowSecondaryBrush" Color="{StaticResource DropShadowSecondary}"/>

    <!-- Highlights Brushes -->
    <SolidColorBrush x:Key="HighlightPrimaryBrush" Color="{StaticResource HighlightPrimary}"/>
    <SolidColorBrush x:Key="HighlightTextPrimaryBrush" Color="{StaticResource HighlightTextPrimary}"/>

    <!-- DataGrid Styling Brushes (Light Theme) -->
    <SolidColorBrush x:Key="GridBackgroundBrush" Color="{StaticResource CardBacground}"/>
    <SolidColorBrush x:Key="GridRowAltBrush" Color="{StaticResource SecondaryGridBackground}"/>
    <SolidColorBrush x:Key="GridBorderBrush" Color="{StaticResource HighlightPrimary}"/>
    <SolidColorBrush x:Key="GridHeaderBackgroundBrush" Color="{StaticResource SidebarBackground}"/>
    <SolidColorBrush x:Key="GridHeaderForegroundBrush" Color="{StaticResource TextColorPrimary}"/>
    <SolidColorBrush x:Key="PrimaryButtonBackground" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="PrimaryButtonForeground" Color="{StaticResource ButtonText}"/>

    <!-- Sidebar and Other Accent Areas -->
    <SolidColorBrush x:Key="SidebarAccentBrush" Color="{StaticResource AccentColor}"/>
    <!-- Sidebar Accent -->
    <SolidColorBrush x:Key="SidebarBorderBrush" Color="{StaticResource AccentColor}"/>
    <!-- Sidebar Border -->

    <!-- Header and Other Accent UI -->
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="SelectedAccentColorBrush" Color="{StaticResource AccentColor}"/>

</ResourceDictionary>
